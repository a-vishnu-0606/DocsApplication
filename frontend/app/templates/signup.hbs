<link rel="stylesheet" href="assets/signup.css">

<div class="login-page">
  <br>

  {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
  {{/if}}

  <form {{action "signup" on="submit"}}>
    <h2>Signup</h2>
    <br>
    <label for="username">Username</label>
    {{input type="text" id="username" placeholder="Enter your username" value=username required=true}}

    <label for="email">Email</label>
    {{input type="email" id="email" placeholder="Enter your Email" value=email required=true}}

    <label for="password">Password</label>
    {{input type="password" id="password" placeholder="Enter your password" value=password required=true}}

    <label for="confirmPassword">Confirm Password</label>
    {{input type="password" id="confirmPassword" placeholder="Confirm your password" value=confirmPassword required=true}}

    <br>
    <br>
    <button type="submit">Signup</button>
  </form>
</div>

{{outlet}}