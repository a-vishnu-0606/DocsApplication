<link rel="stylesheet" href="assets/login.css">

<div class="login-page">
  <br>

  {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
  {{/if}}

  <form {{action "login" on="submit"}}>
    <h2>Login</h2>
    <br>

    <label for="email">Email</label>
    {{input type="email" id="email" placeholder="Enter your Email" value=email required=true maxlength=60}}

    <label for="password">Password</label>
    {{input type="password" id="password" placeholder="Enter your password" value=password required=true maxlength=50}}

    <br><br>

    <button type="submit">Login</button>
    <button type="button" {{action "gotosignup"}}>Signup</button>
  </form>
</div>

{{outlet}}